{
  "coc.preferences.formatOnSave": true,
  "inlayHint.enable": false,
  "suggest.virtualText": true,
  "diagnostic.virtualText": false,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "codeLens.enable": false,
  "typescript.referencesCodeLens.enabled": false,
  "diagnostic.hintSign": "",
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "python.formatting.provider": "ruff",
  "pyright.organizeimports.provider": "ruff",
  "python.sortImports.path": "ruff",
  "python.linting.ruffEnabled": true,
  //"java.jdt.ls.java.home": "/usr/lib/jvm/openjdk21",
  //"coc.source.OmniSharp.enable": true,
  "languageserver": {
    "csharp": {
      "command": "csharp-ls",
      "rootPatterns": ["*.sln", "git"],
      "filetypes": ["cs", "csharp"]
    },
    "fish-lsp": {
      "command": "fish-lsp",
      "filetypes": ["fish"],
      "args": ["start"]
    }
  },
  "svelte.enable-ts-plugin": true,
  "floatFactory.floatConfig": {
    "border": true,
    "rounded": true,
    "winblend": 0
  },
  "suggest.floatConfig": {
    "border": true,
    "rounded": true,
    "winblend": 0
  },
  "suggest.pumFloatConfig": {
    "border": true,
    "rounded": true,
    "winblend": 0
  },
  "typescript.format.enable": true
}
